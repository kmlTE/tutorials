#!/usr/bin/env gnuplot

set terminal pdf color
set output '$OUTPUT_FILE'

set xlabel "Time (sec)"

set autoscale

set format y "%.0s"

set key inside $LEGEND

set xtics 30

set grid

# Set first two line styles to blue (#0060ad) and red (#dd181f)
set style line 1 \
    linecolor rgb 'red' \
    linetype 1 linewidth 2
set style line 2 \
    linecolor rgb 'cyan' \
    linetype 2 linewidth 2
set style line 3 \
    linecolor rgb 'blue' \
    linetype 3 linewidth 2

set ylabel '$YLABEL'
plot for [i=1:3] '$DATA' every $EVERY using 1:2 title 'Host '.i with $WITH linestyle i